<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>de.jardas.commons</groupId>
	<artifactId>jardas-commons</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<name>Jardas Commons</name>

	<scm>
		<developerConnection>scm:git:git@github.com:phjardas/jardas-commons.git</developerConnection>
	</scm>

	<distributionManagement>
		<repository>
			<id>jardas-releases</id>
			<url>http://www.jardas.de:8081/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>jardas-snapshots</id>
			<url>http://www.jardas.de:8081/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

	<issueManagement>
		<system>github</system>
		<url>http://github.org/phjardas/jardas-commons/issues</url>
	</issueManagement>

	<developers>
		<developer>
			<id>phjardas</id>
			<name>Philipp Jardas</name>
			<email>philipp@jardas.de</email>
		</developer>
	</developers>

	<properties>
		<slf4j.version>1.7.2</slf4j.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
	</properties>

	<dependencies>
		<!-- Logging -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>${slf4j.version}</version>
		</dependency>
		
		<!-- Guava -->
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>13.0.1</version>
		</dependency>

		<!-- Test -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-library</artifactId>
			<version>1.3</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
